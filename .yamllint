# .yamllint
---
extends: default

rules:
  indentation:
    indent-sequences: true   # Indent sequences
  line-length:
    max: 120                 # Set maximum line length to 120 characters
    level: warning           # Set level to warning instead of error
  document-start:
    present: false           # Allow documents without a '---' start
  trailing-spaces:
    level: warning           # Warn about trailing spaces
  commas:
    max-spaces-before: 0     # No space before commas
    max-spaces-after: 1      # Single space after commas
  comments:
    min-spaces-from-content: 2  # Enforce space between content and comments
